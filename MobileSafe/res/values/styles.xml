<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="splash_pb_style">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDrawable">@drawable/splash_pb_drawable</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">1000</item>
        <item name="android:minWidth">48dip</item>
        <item name="android:maxWidth">48dip</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
    </style>

    <style name="myswitch_style">
        <item name="android:track">@drawable/switch_track_drawable</item>
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="android:textOn">""</item>
        <item name="android:textOff">""</item>
        <item name="android:thumbTextPadding">0dip</item>
        <item name="android:switchMinWidth">50dip</item>
        <item name="android:switchPadding">25dip</item>
    </style>
        
    <style name="setupguide_tv_style" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">22sp</item>
        <item name="android:drawableLeft">@android:drawable/star_big_on</item>
    </style>
    	
    <style name="setupguide_pre_button">
        <item name="android:onClick">pre</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:text">上一步</item>
    </style>
    
    <style name="setupguide_next_button">
        <item name="android:onClick">next</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:text">下一步</item>
    </style>
    
    <style name="setupguide_imageview">
        <item name="android:src">@drawable/onekey_item</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>
</resources>
