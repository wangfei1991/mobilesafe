<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wyu="http://schemas.android.com/apk/res/com.wyu.mobilesafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/setting_tv_title"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/green"
        android:gravity="center"
        android:orientation="vertical"
        android:text="设置中心"
        android:textSize="30dp" />

    <com.wyu.mobilesafe.customeui.SettingItemView
        android:id="@+id/updateSettingItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        wyu:item_title="是否更新" />
    
    <com.wyu.mobilesafe.customeui.SettingItemView
        android:id="@+id/blockSettingItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        wyu:item_title="黑户拦截" />

    <com.wyu.mobilesafe.customeui.SettingItemView
        android:id="@+id/addressShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        wyu:item_title="来电归属地显示" />

    <com.wyu.mobilesafe.customeui.SettingItemVIew2 
         android:id="@+id/addressShowPattern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        wyu:item_tit="归属地显示格式"
        />        
    <com.wyu.mobilesafe.customeui.SettingItemVIew2 
        android:id="@+id/settingFont"
        android:onClick="settingFont"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        wyu:item_tit="字体设置"
        />    


</LinearLayout>